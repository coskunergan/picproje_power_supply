syntax: glob

#UVISION 4 IGNORE FILES

#Project Files
Code/**/*.OPT     #uVision local project files (debugger settings, current open files, screen positions)
Code/**/*.uvopt
Code/**/*.uvproj
Code/**/*.dep

#Listing Files
Code/**/*.lst     #Listing files generated by C compiler or assembler
Code/**/*.LST     #Ditto
Code/**/*.MAP     #Map File generated by linker
Code/**/*.M51     #Map File generated by linker
Code/**/*.M66     #Map File generated by linker
Code/**/*.PLG     #Contents of build window
Code/**/*.COD     #Complete program listing file

#Object and Hex Files
Code/**/*.DMO     #Relocateable object files
Code/**/*.obj     #Relocateable object files
Code/**/*.OBJ     #Relocateable object files
Code/**/*.B*      #Absolute object files
Code/**/*.hex     #Intel hex file
Code/**/*.bin      #fromelf bin file
Code/**/*.h86     #Intel hex file
Code/**/*.axf     #ARM executable format file

#Debugger Files
Code/**/*.ini     #Debugger initiliasation file

#Temporary Files
Code/**/*.orc     #Global register coloring file for optimisation
Code/**/*.lnp     #Linker input file
Code/**/*.plg     #Protocol file
Code/**/*.sct     #ARM scatter file
Code/**/*.tra     #Trace output file

#Other
Code/**/*.__i     #Unknown
Code/**/*.i     #Unknown
Code/**/*.I     #Unknown
